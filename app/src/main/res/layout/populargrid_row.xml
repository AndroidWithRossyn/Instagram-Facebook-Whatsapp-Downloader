<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rltop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lottieView"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/applogo"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_30sdp"/>

            <RelativeLayout
                android:id="@+id/rlgrid_layernew"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_grid_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <View
                android:id="@+id/viewBgImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:rotation="180"
                android:alpha="0.6"
                android:visibility="gone"
                android:background="@drawable/iv_feed_bg"
                android:layout_height="@dimen/_40sdp"/>

            <ImageView
                android:id="@+id/iv_grid_play"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:visibility="gone"
                android:paddingBottom="@dimen/_8sdp"
                android:src="@drawable/ic_video" />

            <ImageView
                android:id="@+id/iv_grid_select"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"
                android:visibility="gone" />

            <View
                android:id="@+id/viewDateBg"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:alpha="0.6"

                android:background="@drawable/iv_feed_bg"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/taken_atTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                style="@style/myTextviewBold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="timeago"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <RelativeLayout
                android:id="@+id/rlgrid_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:id="@+id/checkedBg"
                android:layout_width="match_parent"
                android:alpha="0.4"
                android:visibility="gone"
                android:background="@color/md_black_1000"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_grid_check"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="start"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right"
                app:tint="@color/white"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
